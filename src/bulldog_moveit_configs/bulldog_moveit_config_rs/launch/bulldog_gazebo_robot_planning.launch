<launch>
  <!-- Bulldog configuration arguments -->
  <arg name="laser_enabled" default="true"/>
  <arg name="ur5_enabled" default="false"/>
  <arg name="kinect_enabled" default="false"/>
  <arg name="realsense_enabled" default="true"/>
  <arg name="dual_ur5_enabled" default="true"/>
  <arg name="robotiq_grippers_enabled" default="true"/>

  <!-- parameter -->
  <!-- <rosparam command="load" file="$(find bulldog_moveit_config_rs)/config/joint_names.yaml"/> -->

  <!-- include -->
  <include file="$(find bulldog_moveit_config_rs)/launch/planning_context.launch" >
    <arg name="load_robot_description" value="true" />
    <arg name="laser_enabled" value="$(arg laser_enabled)"/>
    <arg name="ur5_enabled" value="$(arg ur5_enabled)"/>
    <arg name="kinect_enabled" value="$(arg kinect_enabled)"/>
    <arg name="realsense_enabled" value="$(arg realsense_enabled)"/>
    <arg name="robotiq_grippers_enabled" value="$(arg robotiq_grippers_enabled)"/>
    <arg name="dual_ur5_enabled" value="$(arg dual_ur5_enabled)"/>
  </include>

  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="/use_gui" value="false"/>
    <rosparam param="/source_list">[/joint_states]</rosparam>
  </node>

  <include file="$(find bulldog_moveit_config_rs)/launch/move_group.launch">
    <arg name="info" value="true"/>
    <arg name="publish_monitored_planning_scene" value="true" />
  </include>

  <include file="$(find bulldog_moveit_config_rs)/launch/moveit_rviz.launch">
    <arg name="config" value="true"/>
  </include>
</launch>
