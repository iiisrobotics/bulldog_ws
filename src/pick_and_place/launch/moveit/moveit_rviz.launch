<launch>

  <arg name="debug" default="false" />
  <arg unless="$(arg debug)" name="launch_prefix" value="" />
  <arg     if="$(arg debug)" name="launch_prefix" value="gdb --ex run --args" />

  <arg name="config" default="false" />
  <arg unless="$(arg config)" name="command_args" value="" />
  <arg     if="$(arg config)" name="command_args" value="-d $(find pick_and_place)/rviz/bulldog_demo.rviz" />

  <node name="$(anon rviz)" launch-prefix="$(arg launch_prefix)" pkg="rviz" type="rviz" respawn="false"
	args="$(arg command_args)" output="screen">
    <!-- remap gripper control topic -->
    <remap from="Robotiq3FGripperRobotOutput" to="left_gripper/command" />
    <remap from="Robotiq3FGripperRobotInput" to="left_gripper/state" />
    <rosparam command="load" file="$(find pick_and_place)/config/kinematics.yaml"/>
  </node>

</launch>
