<launch>
    <!-- Robot settings -->
    <arg name="realsense_enabled" default="$(optenv BULLDOG_REALSENSE_ENABLED true)"/>

    <!-- Intel RealSense camera settings -->
    <arg name="left_gripper_camera_serial_no" default="827112070078"/>  <!-- Intel RealSense D435 -->
    <arg name="right_gripper_camera_serial_no" default="821312060956"/>  <!-- Intel RealSense D415 -->
    <arg name="left_gripper_camera" default="left_gripper_sensor_d415_camera"/>
    <arg name="right_gripper_camera" default="right_gripper_sensor_d415_camera"/>  
    <arg name="left_gripper_camera_tf_prefix" default="$(arg left_gripper_camera)"/>
    <arg name="right_gripper_camera_tf_prefix" default="$(arg right_gripper_camera)"/>

    <arg name="color_width" default="640"/>
    <arg name="color_height" default="480"/>
    <arg name="color_fps" default="15"/>
    <arg name="depth_width" default="640"/>
    <arg name="depth_height" default="480"/>
    <arg name="depth_fps" default="15"/>

    <arg name="enable_color" default="true"/>
    <arg name="enable_depth" default="true"/>
    <arg name="enable_fisheye" default="false"/>
    <arg name="enable_infra1" default="false"/>
    <arg name="enable_infra2" default="false"/>
    <arg name="enable_gyro" default="false"/>
    <arg name="enable_accel" default="false"/>
    <arg name="enable_sync" default="true"/>

    <arg name="align_depth" default="true"/>
    <arg name="initial_reset" default="false"/>

    <group if="$(arg realsense_enabled)">
        <include file="$(find realsense2_camera)/launch/rs_rgbd.launch">
            <arg name="serial_no" value="$(arg left_gripper_camera_serial_no)"/>
            <arg name="camera" value="$(arg left_gripper_camera)"/>
            <arg name="tf_prefix" value="$(arg left_gripper_camera_tf_prefix)"/>

            <arg name="color_width" value="$(arg color_width)"/>
            <arg name="color_height" value="$(arg color_height)"/>
            <arg name="color_fps" value="$(arg color_fps)"/>
            <arg name="depth_width" value="$(arg depth_width)"/>
            <arg name="depth_height" value="$(arg depth_height)"/>
            <arg name="depth_fps" value="$(arg depth_fps)"/>

            <arg name="enable_color" value="$(arg enable_color)"/>
            <arg name="enable_depth" value="$(arg enable_depth)"/>
            <arg name="enable_fisheye" value="$(arg enable_fisheye)"/>
            <arg name="enable_infra1" value="$(arg enable_infra1)"/>
            <arg name="enable_infra2" value="$(arg enable_infra2)"/>
            <arg name="enable_sync" value="$(arg enable_sync)"/>
            <arg name="enable_gyro" value="$(arg enable_gyro)"/>
            <arg name="enable_accel" value="$(arg enable_accel)"/>

            <arg name="align_depth" value="$(arg align_depth)"/>
            <arg name="initial_reset" value="$(arg initial_reset)"/>
        </include>

        <include file="$(find realsense2_camera)/launch/rs_rgbd.launch">
            <arg name="serial_no" value="$(arg right_gripper_camera_serial_no)"/>
            <arg name="camera" value="$(arg right_gripper_camera)"/>
            <arg name="tf_prefix" value="$(arg right_gripper_camera_tf_prefix)"/>

            <arg name="color_width" value="$(arg color_width)"/>
            <arg name="color_height" value="$(arg color_height)"/>
            <arg name="color_fps" value="$(arg color_fps)"/>
            <arg name="depth_width" value="$(arg depth_width)"/>
            <arg name="depth_height" value="$(arg depth_height)"/>
            <arg name="depth_fps" value="$(arg depth_fps)"/>

            <arg name="enable_color" value="$(arg enable_color)"/>
            <arg name="enable_depth" value="$(arg enable_depth)"/>
            <arg name="enable_fisheye" value="$(arg enable_fisheye)"/>
            <arg name="enable_infra1" value="$(arg enable_infra1)"/>
            <arg name="enable_infra2" value="$(arg enable_infra2)"/>
            <arg name="enable_sync" value="$(arg enable_sync)"/>
            <arg name="enable_gyro" value="$(arg enable_gyro)"/>
            <arg name="enable_accel" value="$(arg enable_accel)"/>

            <arg name="align_depth" value="$(arg align_depth)"/>
            <arg name="initial_reset" value="$(arg initial_reset)"/>
        </include>
    </group>
</launch>
